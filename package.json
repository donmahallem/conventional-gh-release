{
  "name": "@donmahallem/github-release-action",
  "version": "0.0.1",
  "description": "Github Release Note Creator",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "keywords": [
    "api",
    "types"
  ],
  "scripts": {
    "test": "mocha",
    "build": "tsc",
    "test:coverage": "nyc npm run test",
    "lint": "tslint -c tslint.json -p tsconfig.json src/**/*.ts",
    "lint:fix": "tslint --fix -c tslint.json -p tsconfig.json src/**/*.ts",
    "docs": "typedoc --options typedoc.json",
    "build:ncc": "ncc build ./src/index.ts -o ./dist -s"
  },
  "homepage": "https://donmahallem.github.io/github-release-action/",
  "author": {
    "name": "donmahallem",
    "email": "donmahallem@users.noreply.github.com",
    "url": "https://github.com/donmahallem"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/donmahallem/github-release-action/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/donmahallem/github-release-action.git"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "devDependencies": {
    "@types/chai": "~4.2.14",
    "@types/mocha": "~8.2.0",
    "@types/node": "~14.14.22",
    "@types/sinon": "~9.0.10",
    "@zeit/ncc": "~0.22.3",
    "chai": "~4.2.0",
    "commitizen": "~4.2.3",
    "cz-conventional-changelog": "~3.3.0",
    "mocha": "~7.1.1",
    "nyc": "~15.1.0",
    "sinon": "~9.2.4",
    "ts-node": "~9.1.1",
    "tslint": "~6.1.3",
    "typedoc": "~0.20.19",
    "typescript": "~4.1.3"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "src/**/*.spec.ts",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text-summary",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  },
  "files": [
    "dist/*",
    "src/*"
  ],
  "dependencies": {
    "@actions/core": "~1.2.6",
    "@actions/github": "~1.1.0",
    "@octokit/rest": "~18.0.14",
    "@octokit/types": "~6.5.0",
    "conventional-changelog": "~3.1.24"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
