{
  "name": "@donmahallem/github-release-action",
  "version": "0.0.1",
  "description": "Github Release Note Creator",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "keywords": [
    "api",
    "types"
  ],
  "scripts": {
    "test": "mocha",
    "build": "tsc",
    "test:coverage": "nyc npm run test",
    "lint": "tslint -c tslint.json -p tsconfig.json src/**/*.ts",
    "lint:fix": "tslint --fix -c tslint.json -p tsconfig.json src/**/*.ts",
    "docs": "typedoc --options typedoc.json",
    "build:ncc": "ncc build ./src/index.ts -o ./dist -s"
  },
  "homepage": "https://donmahallem.github.io/github-release-action/",
  "author": {
    "name": "donmahallem",
    "email": "donmahallem@users.noreply.github.com",
    "url": "https://github.com/donmahallem"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/donmahallem/github-release-action/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/donmahallem/github-release-action.git"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "devDependencies": {
    "@types/chai": "~4.2.11",
    "@types/mocha": "~7.0.2",
    "@types/node": "~13.11.0",
    "@types/sinon": "~9.0.0",
    "@zeit/ncc": "~0.22.1",
    "chai": "~4.2.0",
    "mocha": "~7.1.1",
    "nyc": "~15.0.1",
    "sinon": "~9.0.2",
    "ts-node": "~8.8.2",
    "tslint": "~5.20.1",
    "typedoc": "~0.17.4",
    "typescript": "~3.8.3"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "src/**/*.spec.ts",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text-summary",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  },
  "files": [
    "dist/*",
    "src/*"
  ],
  "dependencies": {
    "@actions/core": "~1.2.3",
    "@actions/github": "~1.1.0",
    "@octokit/rest": "~17.2.0",
    "@octokit/types": "~2.6.0",
    "conventional-changelog": "~3.1.18"
  }
}
